<?xml version="1.0" encoding="utf-8"?>
<eput.android.ui.widgets.ColorStringPreference
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/list_margin"
    app:counterEnabled="false"
    app:hintTextAppearance="@style/TextAppearance.MaterialComponents.Headline6"
    app:endIconMode="custom"
    app:endIconCheckable="false"
    app:endIconDrawable="@drawable/ic_baseline_color_lens_24"
    app:endIconContentDescription="@string/button_color_picker"
    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
    >
    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="text"
        />
</eput.android.ui.widgets.ColorStringPreference>